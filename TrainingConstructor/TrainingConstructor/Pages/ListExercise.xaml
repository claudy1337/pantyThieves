<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingConstructor.Pages.ListExercise"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             xmlns:ListCollection="clr-namespace:System.Collections.Generic;assembly=netstandard"
             BackgroundImageSource="loading.png">
    <ScrollView>
        <StackLayout>
            <FlexLayout JustifyContent="Center" Direction="Row" HorizontalOptions="Center" >
                
                
                <Label Text="Workout List" 
                       HorizontalOptions="Center" 
                       FontFamily="Montserrat-BlackItalic.ttf"
                       TextColor="White" 
                       Margin="0,-1,0,0" 
                       FontSize="35"/>
            </FlexLayout>
            
           
            
            <!---Waling -->
            <Frame Margin="35" Padding="-20" CornerRadius="60" BorderColor="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image  Grid.Row="2" 
                        Grid.Column="1" 
                        Source="walking.png"
                        HeightRequest="40" WidthRequest="50"
                        HorizontalOptions="Start"
                        Margin="-30,0,0,0"
                        x:Name="Image"/>

                    <combobox:SfComboBox HorizontalOptions="CenterAndExpand" 
                                         Grid.ColumnSpan="3"  
                                         WidthRequest="120" 
                                         HeightRequest="40" 
                                         Grid.Column="2"  
                                         Grid.Row="1" 
                                         Margin="0,0,0,0"  
                                         IsEditableMode="false"
                                         x:Name="Times">
                        
                        <combobox:SfComboBox.ComboBoxSource>
                            <ListCollection:List x:TypeArguments="x:String">
                                <x:String>5min</x:String>
                                <x:String>10min</x:String>
                                <x:String>20min</x:String>
                                <x:String>1h</x:String>
                                <x:String>2h</x:String>
                               
                            </ListCollection:List>
                        </combobox:SfComboBox.ComboBoxSource>
                    </combobox:SfComboBox>
                
                    <Button
                        HeightRequest="30"
                        WidthRequest="110"
                        Grid.Row="3" 
                        Grid.Column="2" 
                        Grid.ColumnSpan="3"
                        Margin="0,0,0,0"
                        Text ="add"
                        FontSize="17"
                        HorizontalOptions="CenterAndExpand"
                        x:Name="AddWalking"
                        Clicked="AddWalking_Clicked"/>

                    <Label  Grid.Row="2" 
                        Grid.Column="1" 
                        Grid.ColumnSpan="2"
                        Text ="Walking"
                        Margin="20,10,0,0"
                        HorizontalOptions="CenterAndExpand"
                        FontSize="20"
                        x:Name="Names"
                        />
                </Grid>
            </Frame>
            
            <!---Cycling -->

            <Frame Margin="35" Padding="-20" CornerRadius="60" BorderColor="Black" >
