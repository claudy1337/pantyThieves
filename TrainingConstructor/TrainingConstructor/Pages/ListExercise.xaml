                            </ListCollection:List>
                        </combobox:SfComboBox.ComboBoxSource>
                    </combobox:SfComboBox>

                    <Button
                        HeightRequest="30"
                        WidthRequest="110"
                        Grid.Row="3" 
                        Grid.Column="2" 
                        Grid.ColumnSpan="3"
                        Margin="0,0,0,0"
                        Text ="add"
                        FontSize="17"
                        HorizontalOptions="CenterAndExpand"
                        x:Name="Cycking"/>

                    <Label  Grid.Row="2" 
                        Grid.Column="1" 
                        Grid.ColumnSpan="2"
                        Text ="Cycling"
                        Margin="20,10,0,0"
                        HorizontalOptions="CenterAndExpand"
                        FontSize="20"
                        />
                </Grid>
            </Frame>

