<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingConstructor.Pages.Profile"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False"
             BackgroundColor="#F2F2F2"
             Visual="Material"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <ContentPage.Content>
        <FlexLayout Direction="Column" Margin="30">
            <StackLayout>

                <Frame CornerRadius="180" 
                       VerticalOptions="Center" 
                       HeightRequest="40" 
                       x:Name="UserImage">
                    <Image Source="plus.png"/>
                </Frame>
            </StackLayout>

            <StackLayout>
                <yummy:PancakeView CornerRadius="20">
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="20">
                        </yummy:Border>
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <Entry BackgroundColor="White"
                               FontFamily="Montserrat-Medium.ttf"
                               Placeholder="Name" 
                               Margin="0, 35,0,0" 
                               HeightRequest="60"
                               x:Name="Name"
                               Text="{Binding Name}"
                               Visual="Material"/>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>

            <StackLayout>
                <yummy:PancakeView CornerRadius="20">
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="20">
                        </yummy:Border>
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <Entry BackgroundColor="White"
                               FontFamily="Montserrat-Medium.ttf"
                               Placeholder="Name" 
                               Margin="0, 35,0,0" 
                               HeightRequest="60"
                               Text="{Binding Name}"
                               Visual="Material"/>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>

            <StackLayout>
                <yummy:PancakeView CornerRadius="20">
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="20">
                        </yummy:Border>
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <Entry BackgroundColor="White"
                               FontFamily="Montserrat-Medium.ttf"
                               Placeholder="Name" 
                               Margin="0, 35,0,0" 
                               HeightRequest="60"
                               Text="{Binding Name}"
                               Visual="Material"/>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>

            <StackLayout>
                <yummy:PancakeView CornerRadius="20">
                    <yummy:PancakeView.Border>
                        <yummy:Border Thickness="20">
                        </yummy:Border>
                    </yummy:PancakeView.Border>
                    <StackLayout>
                        <Entry BackgroundColor="White"
                               FontFamily="Montserrat-Medium.ttf"
                               Placeholder="Name" 
                               Margin="0, 35,0,0" 
                               HeightRequest="60"
                               Text="{Binding Name}"
                               Visual="Material"/>
                    </StackLayout>
                </yummy:PancakeView>
            </StackLayout>

            <StackLayout>
                <Label Text="male"/>
                <RadioButton Visual="Material" />
            </StackLayout>

            <StackLayout Margin="0,204,0,0">
                <Button x:Name="BRegistration" 
                        Text="Зарегистрироваться" 
                        CornerRadius="200"
                        BackgroundColor="#00b2ff"
                        TextColor="White"/>
            </StackLayout>
         
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>