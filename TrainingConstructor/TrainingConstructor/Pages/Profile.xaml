<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingConstructor.Pages.Profile"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False"
             BackgroundColor="#F2F2F2"
            xmlns:local="clr-namespace:TrainingConstructor"
             Visual="Material"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    
    <ContentPage.Content>
        <FlexLayout Direction="Column" Margin="20">
            <StackLayout Margin="0,-3,0,10">
                <Label Text="Profile" HorizontalOptions="Center" FontSize="18"/>
            </StackLayout>

            <StackLayout>

                <Frame CornerRadius="180" 
                       IsClippedToBounds="True"
                       VerticalOptions="Center" 
                       HeightRequest="50"
                       WidthRequest="50"
                       HorizontalOptions="Center"
                       x:Name="UserImage">

                    <Image Aspect="AspectFill" HeightRequest="60"  Source="userImage.png" WidthRequest="60" x:Name="AddUserImage" Margin="-12">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>

                </Frame>
                <StackLayout>

                    
                    <yummy:PancakeView>
                        <yummy:PancakeView.Border>
                            <yummy:Border>
                            </yummy:Border>
                        </yummy:PancakeView.Border>
                        <StackLayout>
                            <Entry
                               Placeholder="Name" 
                               Margin="0,25,0,0" 
                               x:Name="Name"
                               Text="{Binding NameUser}"
                               MaxLength="11"/>
                        </StackLayout>
                    </yummy:PancakeView>

                    
                    <yummy:PancakeView>
                        <yummy:PancakeView.Border>
                            <yummy:Border>
                            </yummy:Border>
                        </yummy:PancakeView.Border>
                        <StackLayout>
                            <Entry
                               Placeholder="Login" 
                               Margin="0,25,0,0" 
                               x:Name="Login"
                               BindingContext="{Binding LoginUser}"
                               MaxLength="15"/>
                        </StackLayout>
                    </yummy:PancakeView>

                    <yummy:PancakeView>
                        <yummy:PancakeView.Border>
                            <yummy:Border>
                            </yummy:Border>
                        </yummy:PancakeView.Border>
                        <StackLayout>
                            <Entry 
                               Placeholder="Number" 
                               Margin="0,25,0,0" 
                               Text="{Binding NumberUser}"
                               MaxLength="12"/>
                        </StackLayout>
                    </yummy:PancakeView>
                </StackLayout>

                <yummy:PancakeView>
                    <yummy:PancakeView.Border>
                        <yummy:Border>
                        </yummy:Border>
                    </yummy:PancakeView.Border>
                    <DatePicker
                           Margin="10,10,0,0"
                           FontFamily="Montserrat-Medium.ttf"
                        MaximumDate="01.01.2009"
                        MinimumDate="01.01.1965"
                        TextColor="Black">
                    </DatePicker>
                </yummy:PancakeView>

                <StackLayout>
                    <Label Text="Sex" FontSize="18"/>
                </StackLayout>
                <FlexLayout Direction="Row" JustifyContent="SpaceAround">
                    <Frame CornerRadius="20" 
                       VerticalOptions="Center" 
                       HeightRequest="64"
                       WidthRequest="100"
                       HorizontalOptions="Center">

                        <Switch IsToggled="true"/>
                    </Frame>
                </FlexLayout>
                
                <StackLayout VerticalOptions="EndAndExpand">
                    <Button Text="Update Profil"
                            x:Name="SaveProfile"
                            Clicked="SaveProfile_Clicked_1"
                            Margin="0,0,0,5"/>
                </StackLayout>
                
            </StackLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>