<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingConstructor.App">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#FF7A00"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Montserrat-Bold.ttf"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="28" />
            <Setter Property="HeightRequest" Value="62" />
            <Setter Property="WidthRequest" Value="250" />
        </Style>
        
        <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="PlaceholderColor" Value="Black"/>
            <Setter Property="FontFamily" Value="Montserrat-Medium.ttf"/>
            <Setter Property="Visual" Value="Material"/>
            <Setter Property="HeightRequest" Value="60"/>
        </Style>

       
    </Application.Resources>
</Application>